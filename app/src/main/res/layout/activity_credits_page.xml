<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_credits_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context="com.tarun.thomso2k16.CreditsPage">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="100dp"

        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        card_view:cardCornerRadius="4dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#424242"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"

            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Tarun Bansal"
android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/contact_name"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Developer"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/contact_name"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/contact_post"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/team_dev_fb"
                    android:layout_below="@id/contact_post"
                    android:src="@drawable/facebook"/>


            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/card_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="10dp"

        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        card_view:cardCornerRadius="4dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#424242"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"

            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Design Studio"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/contact_name2"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Designer"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/contact_name2"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/contact_post2"
                    />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/team_design_web"
                    android:layout_below="@id/contact_post2"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/internet"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/team_design_fb"
                    android:layout_below="@id/contact_post2"
                    android:layout_marginLeft="120dp"
                    android:src="@drawable/facebook"/>


            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
